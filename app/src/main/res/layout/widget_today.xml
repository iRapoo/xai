<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/widget_button"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/loadWidget"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_color"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loadWidget"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/main_color"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LabelGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="@string/label_less"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/LabelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип недели"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LabelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="День недели"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/LabelWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1я учебная неделя"
                android:textColor="#FFF"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/TOP1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/TOPt1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/BOT1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/BOTt1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/TOP2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/TOPt2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/BOT2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/BOTt2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/TOP3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/TOPt3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/BOT3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/BOTt3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/TOP4"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/TOPt4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/BOT4"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingLeft="65dp">

                                <TextView
                                    android:id="@+id/BOTt4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/no_less"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/line_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/time1"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/time1_top" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time1_5top"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time1_5top" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time1_5bot"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time1_5bot" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/time1_bot" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/time3"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/time2_top" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time2_5top"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time2_5top" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time2_5bot"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time2_5bot" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/time4"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/time2_bot" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/time5"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/time3_top" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time3_5top"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time3_5top" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time3_5bot"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time3_5bot" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/time6"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/time3_bot" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/time7"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/time4_top" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time4_5top"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time4_5top" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/time4_5bot"
                                    android:layout_width="fill_parent"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/time4_5bot" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/time8"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/time4_bot" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>