<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.dualcom.xai.xyz.dualcom.xai.NewsActivity"
    tools:showIn="@layout/activity_news">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/search"
                    android:textColor="@color/dark_grey"
                    android:textSize="25dp"
                    android:hint="@string/Search"
                    android:gravity="left"
                    android:textIsSelectable="false"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/edittext_search"
                    android:visibility="gone" />

                <WebView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/webView"
                    android:layout_below="@+id/linearLayout" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/nointernet"
                    android:gravity="center"
                    android:visibility="gone">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:id="@+id/about"
                            android:background="@drawable/nointernte" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/ni_text"
                            android:id="@+id/ni_text"
                            android:textColor="@color/main_color" />
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressView"
                    android:max="100"
                    android:indeterminate="false"
                    android:progress="0"
                    android:layout_marginTop="-7dp"
                    android:progressTint="@color/extra_color" />

        </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
